description "GUIServer"
author "Canonical"

start on (filesystem and net-device-up IFACE=lo)
stop on runlevel [!2345]

exec /usr/local/bin/runserver.py \
    --guiroot="{{gui_root}}" \
    --apiurl="{{api_url}}" \
    --apiversion="{{api_version}}" \
    --sslpath="{{ssl_cert_path}}" \
    {{if serve_tests}} --servetests \ {{endif}}
    {{if insecure}} --insecure {{endif}}
