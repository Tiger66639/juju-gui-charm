import sys

from charmhelpers import (
    get_config,
    log,
)
from shelltoolbox import (
    DictDiffer,
)

from utils import (
    config_json,
    log_hook,
)

from backend import Backend


def handle_config_changes(config, diff):
    # Handle all configuration file changes.
    log('Updating configuration.')
    prev_config = config_json.get()
    backend = Backend(config, prev_config)

    # Woot
    if prev_config:
        prev_backend = Backend(prev_config)
        # Stop whatever the old config was.
        prev_backend.stop()
    backend.install()
    backend.start()

def main():
    config = get_config()
    prev_config = config_json.get()
    diff = DictDiffer(config, prev_config)

    if not diff.modified:
        log("No configuration changes, exiting.")
        sys.exit(0)
    handle_config_changes(config, diff)
    config_json.set(config)


if __name__ == '__main__':
    with log_hook():
        main()
