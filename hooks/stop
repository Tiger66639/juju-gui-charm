#!/usr/bin/env python2
#-*- python -*-

from charmhelpers import (
    get_config,
    log_entry,
    log_exit,
)

from utils import stop


def main():
    config = get_config()
    stop(config.get('staging'))


if __name__ == '__main__':
    log_entry()
    try:
        main()
    finally:
        log_exit()
