#!/usr/bin/env python2
#-*- python -*-

from charmhelpers import (
    get_config,
    log,
    open_port,
)

from utils import (
    log_hook,
    start_agent,
    start_gui,
    start_improv,
)


def open_ports():
    """Expose Juju GUI web server (HTTP and HTTPS) ports."""
    log('Exposing services.')
    open_port(80)
    open_port(443)


def main():
    config = get_config()
    staging = config.get('staging')
    if staging:
        start_improv(config['staging-environment'], config['ssl-cert-path'])
    else:
        start_agent(config['ssl-cert-path'])
    start_gui(
        config['juju-gui-console-enabled'], config['login-help'],
        config['read-only'], staging, config['ssl-cert-path'],
        config['serve-tests'], config['secure'])
    open_ports()


if __name__ == '__main__':
    with log_hook():
        main()
